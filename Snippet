<style>
#santa-flyer {
    position: fixed;
    z-index: 999999;
    pointer-events: none;
    width: 300px;
    height: 150px;
    transform: scaleX(-1);
    opacity: 0;
}

/* Aktiviert den Flug */
#santa-flyer.run {
    animation: santaFly 12s linear;
    opacity: 1;
}

@keyframes santaFly {
    0%   { left: 110vw; top: 20vh; transform: scaleX(-1) translateY(0); }
    25%  { left: 70vw;  top: 10vh; transform: scaleX(-1) translateY(-10px); }
    50%  { left: 30vw;  top: 25vh; transform: scaleX(-1) translateY(10px); }
    75%  { left: -10vw; top: 15vh; transform: scaleX(-1) translateY(-5px); }
    100% { left: -40vw; top: 20vh; transform: scaleX(-1) translateY(0); }
}

@media (max-width: 600px) {
    #santa-flyer { width: 150px; }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
    const santa = document.getElementById("santa-flyer");

    function startSanta() {
        santa.classList.add("run");
        
        // Klasse entfernen, wenn Animation fertig ist (12s)
        setTimeout(() => {
            santa.classList.remove("run");
        }, 12000);
    }

    // Sofort beim Laden starten
    startSanta();

    // Alle 5 Minuten wiederholen (300.000 ms)
    setInterval(startSanta, 300000);
});
</script>
